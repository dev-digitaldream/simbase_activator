{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Simbase Activator",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.simbase.com/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.simbase.activator",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/512x512.png",
        "icons/256x256.png",
        "icons/128x128.png",
        "icons/32x32.png"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Utility",
      "shortDescription": "Activateur Simbase",
      "longDescription": "Gestion intelligente en lot de cartes SIM Simbase",
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.simbase.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Simbase Activator",
        "width": 1100,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true
      }
    ]
  }
}
